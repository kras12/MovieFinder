<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieFinder.Components.LoadingIndicator">
    <Grid BackgroundColor="#80000000" IsVisible="{Binding IsBusy}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <ActivityIndicator IsRunning="True" Color="White"/>
            <Label Text="Loading data..." TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentView>
