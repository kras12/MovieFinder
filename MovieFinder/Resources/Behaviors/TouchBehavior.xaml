<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- Animation Durations -->
    <x:Int32 x:Key="TouchBehaviorAnimationDuration">250</x:Int32>    
    
    <!-- Colors -->
    <Color x:Key="TouchBehaviorHoveredBackgroundColor">#223f67</Color>
    <Color x:Key="TouchBehaviorPressedBackgroundColor">#223f67</Color>

    <!-- Easing Functions -->
    <x:Static x:Key="TouchBehaviorAnimationEasing" Member="Easing.CubicInOut"/>

    <!-- Opacity Values -->
    <x:Double x:Key="TouchBehaviorHoveredOpacity">0.7</x:Double>
    <x:Double x:Key="TouchBehaviorPressedOpacity">0.5</x:Double>
    
    <!-- Scale Values -->
    <x:Double x:Key="TouchBehaviorPressedScale">0.8</x:Double>
    <x:Double x:Key="TouchBehaviorHoveredScale">1.2</x:Double>
</ResourceDictionary>
