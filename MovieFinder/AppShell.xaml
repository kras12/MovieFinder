<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieFinder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MovieFinder.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MovieFinder">

    <TabBar>
        <Tab Title="Movie Discovery">
            <ShellContent ContentTemplate="{DataTemplate pages:MovieDiscoveryPage}"/>
        </Tab>
        <Tab Title="Watched Movies">
            <ShellContent ContentTemplate="{DataTemplate pages:WatchedMoviesPage}"/>
        </Tab>
    </TabBar>
</Shell>
